<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:id="@+id/imgView_listItem_AlbumArt"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView

            android:text="TextView"
            tools:text="Title: "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/imgView_listItem_AlbumArt"
            android:id="@+id/txtView_listItem_Title"
            android:textColor="#000000"
            app:autoSizeMinTextSize="13sp"
            app:autoSizeMaxTextSize="17sp"
            app:autoSizeTextType="uniform"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/txtView_listItem_Artist" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <!--app:autoSizeMinTextSize="10sp"-->
    <!--app:autoSizeMaxTextSize="16sp"-->
    <!--app:autoSizeStepGranularity="2sp"-->
    <TextView
            android:text="TextView"
            tools:text="Artist"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_listItem_Artist"
            app:layout_constraintTop_toBottomOf="@+id/txtView_listItem_Title"
            app:layout_constraintStart_toEndOf="@+id/imgView_listItem_AlbumArt" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <TextView
            android:text="TextView"
            app:autoSizeTextType="uniform"
            tools:text="Publication Date:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="13sp"
            android:id="@+id/txtView_listItem_PublicationDate"
            app:layout_constraintStart_toEndOf="@+id/imgView_listItem_AlbumArt" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtView_listItem_Artist" android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="395dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="146dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>